<style type="text/css">
 /* Styles for the banner container with static background color */
.banner-container {
  overflow: hidden;
  width: 100%;
  height: 50px;
  background-color: #3cb371; /* Money Green background color */
}

/* Styles for the moving banner */
.moving-banner {
  display: flex;
  width: fit-content;
  animation: moveBanner linear infinite;
  transform: translateX(100%); /* Start position (object is outside the right edge) */
  width: 100%;
}

/* Styles for the object inside the banner */
.banner-item {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff; /* White text color */
  font-size: 18px;
  font-weight: bold;
  padding: 10px 20px;
  border-radius: 5px; /* Rounded corners for the object */
  background-color: rgba(255, 255, 255, 0.2); /* Semi-transparent white background for the object */
}

/* CSS animation for the moving banner */
@keyframes moveBanner {
  0% {
    transform: translateX(100%); /* Start position (object is outside the right edge) */
  }
  100% {
    transform: translateX(-100%); /* End position (object moves to the left and goes outside the left edge) */
  }
}

</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  $(document).ready(function() {
    function animateBanner() {
      const bannerWidth = $('.banner-container').width();
      const objectWidth = $('.banner-item').outerWidth(true);
      const duration = (bannerWidth + objectWidth) * 10; // Adjust the multiplier to control animation speed

      $('.moving-banner').css('animation', 'moveBanner ' + duration + 'ms linear infinite');
      $('.moving-banner').css('transform', 'translateX(0%)'); // Update the transform property to start the banner-item at the very right
    }

    animateBanner(); // Start the animation
  });
</script>
