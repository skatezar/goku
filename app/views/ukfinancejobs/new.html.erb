<!-- app/views/ukfinancejobs/new.html.erb -->
<h1>New Job</h1>
<p> DO NOT LEAVE ANY FIELDS BLANK; copy and paste them from the career sites</p>

<%= form_with(model: @ukfinancejob, url: ukfinancejobs_path, class: 'ukfinancejob-form') do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :url %>
    <%= form.text_field :url, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :company %>
    <%= form.text_field :company, class: 'form-control' %>
  </div>

  <br>  
  
  <div class="form-group">
    <%= form.label :type_of_job %>
    <%= form.select :type_of_job, options_for_select(['Summer Internship', 'Off-Cycle Internship', 'Full-time entry level', 'Insight Internship', 'Apprenticeship', 'Work Placement']), {}, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :field_in_finance %>
    <%= form.select :field_in_finance, options_for_select(['Bulge Bracket', 'Hedge Fund', 'Asset Manager', 'Private Equity', 'Elite Boutique', 'Trading/Market Makers', 'Other']), {}, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :industry %>
    <%= form.select :industry, options_for_select(['sell side', 'buy side']), {}, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :location %>
    <%= form.select :location, options_for_select(['London, UK', 'Worldwide',]), {}, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :application_opening_date %>
    <p class="italic_small">provide guess if not available</p>
    <%= form.date_field :application_opening_date, class: 'form-control' %>
  </div>
  <br>
   <div class="field">
    <p>Are you guessing opening date?
    <%= form.check_box :guesstimate %>
    </p>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :deadline_date %>
    <p class="italic_small">provide guess if not available</p>
    <%= form.date_field :deadline_date, class: 'form-control' %>
  </div>
  <br>
  <div class="field">
    <p>Are you guessing deadline date?
    <%= form.check_box :guesstimate_deadline %>
    </p>
  </div>
  <div class="form-group">
    <%= form.label :eligibility %>
    <%= form.text_field :eligibility, class: 'form-control' %>
  </div>
  <br>
  <div class="field">
    <p>Diversity event?
    <%= form.check_box :diversity %>
    </p>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :hr_email %>
    <%= form.text_field :hr_email, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :app_process %>
    <%= form.text_field :app_process, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :rolling_admission %>
    <%= form.check_box :rolling_admission %>
  </div>
  <br>
  <p> ADD LOGO</p>
  <div class="form-group">
      <%= form.file_field :photo, as: :file %>
  </div>
  <br>

  <div class="actions text-center ">
    <%= form.submit 'ADD', class: ' w-100 text-center btn btn-green d-flex' %>
  </div>
<% end %>
<br>
<p>FILL ALL FIELDS. IF YOU CAN'T CLICK 'ADD' THEN ITS BECAUSE YOU LEFT A FIELD BLANK</p>

