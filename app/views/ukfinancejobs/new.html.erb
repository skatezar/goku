<!-- app/views/ukfinancejobs/new.html.erb -->
<h1>New Job</h1>

<%= form_with(model: @ukfinancejob, url: ukfinancejobs_path, class: 'ukfinancejob-form') do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :url %>
    <%= form.text_field :url, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :company %>
    <%= form.text_field :company, class: 'form-control' %>
  </div>

  <br>  
  <div class="form-group">
    <%= form.label :type_of_job %>
    <%= form.text_field :type_of_job, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :location %>
    <%= form.text_field :location, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :application_opening_date %>
    <p class="italic_small">provide guess if not available</p>
    <%= form.date_field :application_opening_date, class: 'form-control' %>
  </div>
  <br>

   <div class="field">
    <p>Are you guessing opening date?
    <%= form.check_box :guesstimate %>
    </p>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :eligibility %>
    <%= form.text_field :eligibility, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :industry %>
    <%= form.text_field :industry, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :hr_email %>
    <%= form.text_field :hr_email, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :app_process %>
    <%= form.text_field :app_process, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :deadline_date %>
    <%= form.date_field :deadline_date, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :rolling_admission %>
    <%= form.check_box :rolling_admission %>
  </div>
  <br>
  <div class="form-group">
      <%= form.file_field :photo, as: :file %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit 'Create UK Finance Job', class: 'btn btn-green d-flex' %>
  </div>
<% end %>


<style type="text/css">
  input[type="checkbox"] {
    transform: scale(2.5); /* Adjust the scale value as needed */
    margin-left: 30px; /* Add spacing between checkbox and label */
  }
</style>